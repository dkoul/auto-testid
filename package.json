{
  "name": "auto-testid",
  "version": "2.0.1",
  "description": "Automated custom attribute generator for React and Vue.js - supports testing, analytics, and automation workflows",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "testing",
    "automation", 
    "analytics",
    "data-testid",
    "data-qa",
    "data-analytics",
    "custom-attributes",
    "react",
    "vue",
    "angular",
    "html",
    "ast",
    "vscode-extension"
  ],
  "author": "Auto-TestID Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/auto-testid/auto-testid.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@dkoul/auto-testid-core",
    "build:cli": "npm run build --workspace=@dkoul/auto-testid-cli",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "validate-packages": "npm run validate --workspaces --if-present",
    "publish:npm": "lerna publish",
    "dev": "npm run dev --workspaces --if-present",
    "watch": "npm run watch --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lerna": "^7.1.4",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
} 